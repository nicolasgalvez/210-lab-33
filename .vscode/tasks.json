{
    "tasks": [
        {
            "label": "Build Main",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g", // Allow debugging
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/build/main",
                // "-v",
                "-I${workspaceFolder}/lib",
                "-I${workspaceFolder}/lib/Car",
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the main executable"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-I",
                "${workspaceFolder}/external/googletest/googletest/include",
                "-std=c++11",
                "-I",
                "${workspaceFolder}/external/googletest/googletest",
                "-pthread",
                "${workspaceFolder}/external/googletest/googletest/src/gtest-all.cc",
                "${workspaceFolder}/tests/test_main.cpp",
                "-o",
                "${workspaceFolder}/build/test_main"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the test executable"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/test_main",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Run the tests"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++11"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}